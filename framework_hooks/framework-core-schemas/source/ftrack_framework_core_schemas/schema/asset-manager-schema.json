{
  "title": "Asset_manager",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "Plugin": {
      "title": "Plugin",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "plugin",
        "category",
        "type",
        "default_method"
      ],
      "order":["type", "category", "name", "description", "plugin", "widget", "options", "default_method"],
      "properties": {
        "category": {
          "type": "string",
          "pattern": "^plugin$",
          "default": "plugin"
        },
        "type": {
          "type": "string",
          "pattern": "^base$",
          "default": "base"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "plugin": {
          "type": "string"
        },
        "widget": {
          "type": "string"
        },
        "widget_ref": {
          "type": "string"
        },
        "visible": {
          "type": "boolean",
          "default": true
        },
        "editable": {
          "type": "boolean",
          "default": true
        },
        "options": {
          "type": "object",
          "default": {}
        },
        "default_method": {
          "type": "string",
          "default": "run"
        }
      }
    },
    "ActionPlugin": {
      "allOf": [
        {
          "$ref": "#/definitions/Plugin"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^action$",
          "default": "action"
        }
      }
    },
    "Action": {
      "title": "Action",
      "type": "object",
      "required": [
        "load",
        "select",
        "update",
        "unload",
        "remove"
      ],
      "order":[
        "load",
        "select",
        "update",
        "unload",
        "remove"
      ],
      "additionalProperties": false,
      "properties": {
        "select": {
          "type": "array",
          "default": [],
          "items": {
            "allOf": [{"$ref": "#/definitions/ActionPlugin"}],
            "properties": {
              "type": {
                "pattern": "^action$",
                "default": "action"
              },
              "ui_callback": {
                "type": "string",
                "default": "ctx_select"
              }
            }
          }
        },
        "update": {
          "type": "array",
          "items": {
            "allOf": [{"$ref": "#/definitions/ActionPlugin"}],
            "properties": {
                "type": {
                  "pattern": "^action$",
                  "default": "action"
                },
                "ui_callback": {
                  "type": "string",
                  "default": "ctx_update"
                }
              }
          },
          "minItems": 1
        },
        "unload": {
          "type": "array",
          "default": [],
          "items": {
            "allOf": [{"$ref": "#/definitions/ActionPlugin"}],
            "properties": {
              "type": {
                "pattern": "^action$",
                "default": "action"
              },
              "ui_callback": {
                "type": "string",
                "default": "ctx_unload"
              }
            }
          }
        },
        "load": {
          "type": "array",
          "default": [],
          "items": {
            "allOf": [{"$ref": "#/definitions/ActionPlugin"}],
            "properties": {
              "type": {
                "pattern": "^action$",
                "default": "action"
              },
              "ui_callback": {
                "type": "string",
                "default": "ctx_load"
              }
            }
          }
        },
        "remove": {
          "type": "array",
          "default": [],
          "items": {
            "allOf": [{"$ref": "#/definitions/ActionPlugin"}],
            "properties": {
                "type": {
                  "pattern": "^action$",
                  "default": "action"
                },
                "ui_callback": {
                  "type": "string",
                  "default": "ctx_remove"
                }
              }
          }
        }
      }
    }
  },
  "required": [
    "name",
    "host_type",
    "type",
    "actions",
    "discover",
    "engine_type",
    "engine_name"
  ],
  "order":[
    "type", "name", "host_type", "actions", "engine_type",  "engine_name"
  ],
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^asset_manager$",
      "default": "asset_manager$"
    },
    "name": {
      "type": "string"
    },
    "host_type": {
      "type": "string",
      "default": null
    },
    "ui_type": {
      "type": "string",
      "default": null
    },
    "engine_type": {
      "type": "string",
      "default": "asset_manager"
    },
    "engine_name": {
      "type": "string",
      "default": "asset_manager"
    },
    "discover": {
      "type": "array",
      "items": {
        "allOf": [{"$ref": "#/definitions/ActionPlugin"}],
        "properties": {
            "type": {
              "pattern": "^discover$",
              "default": "discover"
            },
            "ui_callback": {
              "type": "string",
              "default": "ctx_discover"
            }
          }
      },
      "minItems": 0,
      "maxItems": 1
    },
    "actions": {
      "$ref": "#/definitions/Action"
    }
  }
}