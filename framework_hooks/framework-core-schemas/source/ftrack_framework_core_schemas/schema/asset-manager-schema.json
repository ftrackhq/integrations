{
  "title": "Asset_manager",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "Step": {
      "title": "Step",
      "type": "object",
      "required": [
        "name",
        "stages",
        "category",
        "type",
        "stage_order"
      ],
      "order":["category", "type", "name", "stages", "stage_order" ],
      "additionalProperties": false,
      "properties": {
        "category": {
          "type": "string",
          "pattern": "^step$",
          "default": "step"
        },
        "type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "widget_ref": {
          "type": "string"
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "stages": {
          "type": "array",
          "maxItems": 3,
          "uniqueItems": true,
          "items": {}
        },
        "stage_order": {
          "type": "array",
          "items": {"type": "string"},
          "default": []
        }
      }
    },
    "Stage": {
      "title": "Stage",
      "type": "object",
      "required": [
        "name",
        "plugins",
        "category",
        "type"
      ],
      "order":["category", "type", "name", "plugins"],
      "additionalProperties": false,
      "properties": {
        "category": {
          "type": "string",
          "pattern": "^stage$",
          "default": "stage"
        },
        "type": {
          "type": "string"
        },
        "visible": {
          "type": "boolean",
          "default": true
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "widget_ref": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "enum": [
            "collector",
            "validator",
            "exporter",
            "context",
            "finalizer",
            "pre_finalizer",
            "post_finalizer"
          ]
        },
        "plugins": {
          "type": "array",
          "items": {"$ref": "#/definitions/Plugin"},
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "Plugin": {
      "title": "Plugin",
      "type": "object",
      "required": [
        "name",
        "plugin",
        "category",
        "type",
        "default_method"
      ],
      "order":["type", "category", "name", "description", "plugin", "widget", "widget_id", "context_data", "data", "options", "default_method"],
      "additionalProperties": false,
      "properties": {
        "category": {
          "type": "string",
          "pattern": "^plugin$",
          "default": "plugin"
        },
        "type": {
          "type": "string",
          "enum": [
            "collector",
            "validator",
            "exporter",
            "context",
            "finalizer",
            "pre_finalizer",
            "post_finalizer"
          ]
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "plugin": {
          "type": "string",
          "default": ""
        },
        "widget": {
          "type": "string",
          "default": ""
        },
        "widget_id": {
          "type": "string",
          "default": ""
        },
        "visible": {
          "type": "boolean",
          "default": true
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "editable": {
          "type": "boolean",
          "default": true
        },
        "context_data": {
          "type": "object",
          "default": {}
        },
        "data": {
          "type": "object",
          "default": {}
        },
        "options": {
          "type": "object",
          "default": {}
        },
        "default_method": {
          "type": "string",
          "default": "run"
        }
      }
    },
    "ActionStep": {
      "allOf": [
        {
          "$ref": "#/definitions/Step"
        }
      ],
      "properties": {
        "stages": {
          "type": "array",
          "maxItems": 2,
          "uniqueItems": true,
          "items": {
            "oneOf":[
                      {"$ref": "#/definitions/DiscoverStage"},
                      {"$ref": "#/definitions/Stage"}
                  ]
          }
        },
        "type": {
          "type": "string",
          "pattern": "^action$",
          "default": "action"
        }
      }
    },
    "DiscoverStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ],
      "properties": {
        "name": {
          "default": "discover"
        },
        "plugins": {
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/Plugin"
              }
            ],
            "properties": {
              "type": {
                "pattern": "^discover$",
                "default": "discover"
              }
            }
          },
          "type": "array",
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        },
        "type": {
          "type": "string",
          "pattern": "^discover$",
          "default": "discover"
        }
      }
    }
  },
  "required": [
    "name",
    "asset_type",
    "host_type",
    "actions",
    "type",
    "engine_type",
    "engine_name"
  ],
  "order":[
    "type", "name", "asset_type", "task_type", "host_type", "ui_type", "discoverable" ,"actions"
  ],
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^asset_manager$",
      "default": "asset_manager"
    },
    "name": {
      "type": "string",
      "default": null
    },
    "asset_type": {
      "type": "string",
      "default": null
    },
    "task_type": {
      "type": "string",
      "default": null
    },
    "host_type": {
      "type": "string",
      "default": null
    },
    "ui_type": {
      "type": "string",
      "default": ""
    },
    "discoverable": {
      "type": "array",
      "items": {"type": "string"},
      "default": [
        "Task"
      ]
    },
    "actions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ActionStep"
      },
      "default": [],
      "minItems": 1,
      "maxItems": 1,
      "uniqueItems": true
    },
    "engine_type": {
          "type": "string",
          "default": "asset_manager"
        },
    "engine_name": {
          "type": "string",
          "default": null
        }
  }
}

