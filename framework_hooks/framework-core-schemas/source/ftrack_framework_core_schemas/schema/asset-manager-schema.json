{
  "title": "Asset_manager",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "Step": {
      "title": "Step",
      "type": "object",
      "required": [
        "name",
        "stages",
        "category",
        "type",
        "stage_order"
      ],
      "order":["category", "type", "name", "stages", "stage_order" ],
      "properties": {
        "category": {
          "type": "string",
          "pattern": "^step$",
          "default": "step"
        },
        "type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "widget_ref": {
          "type": "string"
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "stages": {
          "type": "array",
          "maxItems": 3,
          "uniqueItems": true,
          "items": {}
        },
        "stage_order": {
          "type": "array",
          "items": {"type": "string"},
          "default": []
        }
      }
    },
    "Stage": {
      "title": "Stage",
      "type": "object",
      "required": [
        "name",
        "plugins",
        "category",
        "type"
      ],
      "order":["category", "type", "name", "plugins"],
      "properties": {
        "category": {
          "type": "string",
          "pattern": "^stage$",
          "default": "stage"
        },
        "name": {
          "type": "string"
        },
        "visible": {
          "type": "boolean",
          "default": true
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "widget_ref": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "select",
            "query",
            "unload",
            "load",
            "remove"
          ]
        },
        "plugins": {
          "type": "array",
          "items": {"$ref": "#/definitions/Plugin"},
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "Plugin": {
      "title": "Plugin",
      "type": "object",
      "required": [
        "name",
        "plugin",
        "category",
        "type",
        "default_method",
        "enabled"
      ],
      "order":["type", "category", "name", "description", "plugin", "widget", "widget_id","options", "default_method", "enabled"],
      "properties": {
        "category": {
          "type": "string",
          "pattern": "^plugin$",
          "default": "plugin"
        },
        "type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "plugin": {
          "type": "string"
        },
        "widget": {
          "type": "string",
          "default": ""
        },
        "widget_id": {
          "type": "string",
          "default": ""
        },
        "editable": {
          "type": "boolean",
          "default": true
        },
        "options": {
          "type": "object",
          "default": {}
        },
        "default_method": {
          "type": "string",
          "default": "run"
        },
        "enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "DiscoveryPlugin": {
      "allOf": [
        {
          "$ref": "#/definitions/Plugin"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^discover$",
          "default": "discover"
        },
        "ui_callback": {
          "type": "string",
          "default": "ctx_discover"
        }
      }
    },
    "ActionPlugin": {
      "allOf": [
        {
          "$ref": "#/definitions/Plugin"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^action$",
          "default": "action"
        }
      }
    },
    "ActionStage": {
      "allOf": [
        {
          "$ref": "#/definitions/Stage"
        }
      ]
    },
    "SelectStage": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStage"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^select"
        },
        "plugins": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/ActionPlugin"
              }
            ],
            "properties": {
              "name": {
                "pattern": "^select$",
                "default": "select"
              }
            }
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        },
        "name": {
          "type": "string",
          "default": "select"
        }
      }
    },
    "QueryStage": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStage"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^query$"
        },
        "plugins": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/ActionPlugin"
              }
            ],
            "properties": {
              "name": {
                "pattern": "^query$",
                "default": "query"
              }
            }
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        },
        "name": {
          "type": "string",
          "default": "query"
        }
      }
    },
    "UnloadStage": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStage"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^unload$"
        },
        "plugins": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/ActionPlugin"
              }
            ],
            "properties": {
              "name": {
                "pattern": "^unload$",
                "default": "unload"
              }
            }
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        },
        "name": {
          "type": "string",
          "pattern": "^unload$",
          "default": "unload"
        }
      }
    },
    "LoadStage": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStage"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^load$"
        },
        "plugins": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/ActionPlugin"
              }
            ],
            "properties": {
              "name": {
                "pattern": "^load$",
                "default": "load"
              }
            }
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        },
        "name": {
          "type": "string",
          "pattern": "^load$",
          "default": "load"
        }
      }
    },
    "RemoveStage": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStage"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^remove$"
        },
        "plugins": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/ActionPlugin"
              }
            ],
            "properties": {
              "name": {
                "pattern": "^remove$",
                "default": "remove"
              }
            }
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        },
        "name": {
          "type": "string",
          "pattern": "^remove$",
          "default": "remove"
        }
      }
    },
    "ActionStep": {
      "allOf": [
        {
          "$ref": "#/definitions/Step"
        }
      ],
      "properties": {
        "ui_callback": {
          "type": "string"
        }
      },
      "required": [
        "ui_callback"
      ]
    },
    "SelectAction": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStep"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^select$"
        },
        "ui_callback": {
          "default": "ctx_select"
        },
        "stages": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "oneOf":[
              {"$ref": "#/definitions/SelectStage"}
            ]
          }
        }
      }
    },
    "UpdateAction": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStep"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^update$"
        },
        "ui_callback": {
          "default": "ctx_update"
        },
        "stages": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "oneOf":[
              {"$ref": "#/definitions/QueryStage"},
              {"$ref": "#/definitions/RemoveStage"},
              {"$ref": "#/definitions/LoadStage"}
            ]
          },
          "minItems": 1,
          "maxItems": 3
        }
      }
    },
    "ChangeVersionAction": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStep"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^change_version$"
        },
        "ui_callback": {
          "default": ""
        },
        "stages": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "oneOf":[
              {"$ref": "#/definitions/RemoveStage"},
              {"$ref": "#/definitions/LoadStage"}
            ]
          },
          "minItems": 1,
          "maxItems": 2
        }
      }
    },
    "UnloadAction": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStep"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^unload$"
        },
        "ui_callback": {
          "default": "ctx_unload"
        },
        "stages": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "oneOf":[
              {"$ref": "#/definitions/UnloadStage"}
            ]
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "LoadAction": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStep"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^load$"
        },
        "ui_callback": {
          "default": "ctx_load"
        },
        "stages": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "oneOf":[
              {"$ref": "#/definitions/LoadStage"}
            ]
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "RemoveAction": {
      "allOf": [
        {
          "$ref": "#/definitions/ActionStep"
        }
      ],
      "properties": {
        "type": {
          "pattern": "^remove$"
        },
        "ui_callback": {
          "default": "ctx_remove"
        },
        "stages": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "oneOf":[
              {"$ref": "#/definitions/RemoveStage"}
            ]
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    }
  },
  "required": [
    "name",
    "host_type",
    "type",
    "actions",
    "discovery",
    "engine_type",
    "engine_name"
  ],
  "order":[
    "type", "name", "host_type", "discovery", "actions", "engine_type",  "engine_name"
  ],
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^asset_manager$",
      "default": "asset_manager$"
    },
    "name": {
      "type": "string"
    },
    "host_type": {
      "type": "string",
      "default": null
    },
    "ui_type": {
      "type": "string",
      "default": null
    },
    "engine_type": {
      "type": "string",
      "default": "asset_manager"
    },
    "engine_name": {
      "type": "string",
      "default": "asset_manager"
    },
    "discovery": {
      "type": "array",
      "items": {
        "allOf": [{"$ref": "#/definitions/DiscoveryPlugin"}]
      },
      "minItems": 1,
      "maxItems": 1
    },
    "actions": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "oneOf":[
          {"$ref": "#/definitions/SelectAction"},
          {"$ref": "#/definitions/UpdateAction"},
          {"$ref": "#/definitions/ChangeVersionAction"},
          {"$ref": "#/definitions/UnloadAction"},
          {"$ref": "#/definitions/LoadAction"},
          {"$ref": "#/definitions/RemoveAction"}
        ]
      }
    }
  }
}