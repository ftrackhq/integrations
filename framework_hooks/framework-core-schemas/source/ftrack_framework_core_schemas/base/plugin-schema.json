{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://www.ftrack.com/integrations/framework/plugin-schema.json",
  "title": "PluginSchema",
  "description": "Base plugin schema for the framework",
  "type": "object",
  "required": [
        "plugin_title",
        "plugin_name",
        "category",
        "default_method",
        "plugin_type"
      ],
  "properties": {
        "category": {
          "type": "string",
          "pattern": "^plugin$",
          "default": "plugin"
        },
        "plugin_type": {
          "type": "string"
        },
        "plugin_title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "plugin_name": {
          "type": "string"
        },
        "widget_name": {
          "type": "string",
          "default": ""
        },
        "widget_id": {
          "type": "string",
          "default": ""
        },
        "visible": {
          "type": "boolean",
          "default": true
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "editable": {
          "type": "boolean",
          "default": true
        },
        "context_data": {
          "type": "object",
          "default": {}
        },
        "data": {
          "type": "object",
          "default": {}
        },
        "options": {
          "type": "object",
          "default": {}
        },
        "default_method": {
          "type": "string",
          "default": "run"
        }
      },
  "additionalProperties": false
}