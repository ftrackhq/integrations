{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://www.ftrack.com/integrations/framework/step-schema.json",
  "title": "StepSchema",
  "description": "Base step schema for the framework",
  "type": "object",
  "required": [
        "step_name",
        "category",
        "stages",
        "step_type"
      ],
  "properties": {
        "category": {
          "type": "string",
          "pattern": "^step$",
          "default": "step"
        },
        "step_type": {
          "type": "string"
        },
        "step_name": {
          "type": "string"
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "stages": {
          "type": "array",
          "uniqueItems": true,
          "items": {"$ref": "memory:StageSchema"}
        }
  },
  "additionalProperties": false
}