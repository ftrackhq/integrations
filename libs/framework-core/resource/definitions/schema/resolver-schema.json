{
  "title": "Resolver",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "Config": {
      "title": "Config",
      "type": "object",
      "required": [
        "engine_type",
        "type"
      ],
      "order":["type", "engine_type"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^config$",
          "default": "config"
        },
        "engine_type": {
          "type": "string",
          "default": "resolver"
        }
      }
    },
    "Plugin": {
      "title": "Plugin",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "plugin",
        "category",
        "type",
        "default_method"
      ],
      "order":["type", "category", "name", "description", "plugin", "widget", "options", "default_method"],
      "properties": {
        "category": {
          "type": "string",
          "pattern": "^plugin$",
          "default": "plugin"
        },
        "type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "plugin": {
          "type": "string"
        },
        "widget": {
          "type": "string"
        },
        "widget_ref": {
          "type": "string"
        },
        "visible": {
          "type": "boolean",
          "default": true
        },
        "editable": {
          "type": "boolean",
          "default": true
        },
        "options": {
          "type": "object",
          "default": {}
        },
        "default_method": {
          "type": "string",
          "default": "run"
        }
      }
    },
    "ResolverPlugin": {
      "allOf": [
        {
          "$ref": "#/definitions/Plugin"
        }
      ],
      "properties": {
        "type": {
          "enum": [
            "asset"
          ]
        }
      }
    },
    "Resolver": {
      "title": "Resolver",
      "type": "object",
      "required": [
        "resolve_dependencies"
      ],
      "additionalProperties": false,
      "properties": {
        "resolve_dependencies": {
          "type": "array",
          "items": {
            "allOf": [{"$ref": "#/definitions/ResolverPlugin"}],
            "properties": {
                "type": {
                  "default": "asset"
                }
              }
          },
          "minItems": 1
        }
      }
    }
  },
  "required": [
    "name",
    "host_type",
    "type",
    "resolvers",
    "_config"
  ],
  "order":[
    "type", "name", "host_type", "resolvers"
  ],
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^resolver$",
      "default": "resolver$"
    },
    "name": {
      "type": "string"
    },
    "host_type": {
      "type": "string",
      "default": null
    },
    "ui_type": {
      "type": "string",
      "default": null
    },
    "resolvers": {
      "$ref": "#/definitions/Resolver"
    },
    "_config": {
      "$ref": "#/definitions/Config",
      "default": {}
    }
  }
}