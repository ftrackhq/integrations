{
  "title": "Package",
  "type": "object",
  "additionalProperties": false,
  "tool_configs": {
    "PackageComponent": {
      "title": "PackageComponent",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name", "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^package_component$",
          "default": "package_component"
        },
        "name": {
          "type": "string"
        },
        "file_type": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "optional": {
          "type": "boolean"
        }
      }
    }
  },
  "required": [
    "name",
    "type",
    "context",
    "components"
  ],
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^package$",
      "default": "package"
    },
    "name": {
      "type": "string"
    },
    "asset_type_name": {
      "type": "string"
    },
    "context": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/tool_configs/PackageComponent"
      },
      "minItems": 1
    }
  }
}