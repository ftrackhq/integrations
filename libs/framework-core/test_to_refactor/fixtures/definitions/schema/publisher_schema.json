{
  "title": "Publisher",
  "type": "object",
  "additionalProperties": false,
  "tool_configs": {
    "Config": {
      "title": "Config",
      "type": "object",
      "required": [
        "stage_order",
        "engine",
        "type"
      ],
      "order":["type", "stage_order", "engine"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^config$",
          "default": "config"
        },
        "stage_order": {
          "type": "array",
          "items": {"type": "string"},
          "default": [
            "collector",
            "validator",
            "exporter"
          ]
        },
        "engine": {
          "type": "string",
          "default": "PublisherEngine"
        }
      }
    },
    "Stage": {
      "title": "Stage",
      "type": "object",
      "required": [
        "name",
        "plugins",
        "type"
      ],
      "order":["type", "name", "plugins"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^stage$",
          "default": "stage"
        },
        "name": {
          "type": "string",
          "enum": [
            "collector",
            "validator",
            "exporter",
            "context",
            "finalizer"
          ]
        },
        "plugins": {
          "type": "array",
          "items": {
            "$ref": "#/tool_configs/Plugin"
          },
          "default": [],
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "Plugin": {
      "title": "Plugin",
      "type": "object",
      "required": [
        "name",
        "plugin",
        "type",
        "_results"
      ],
      "order":["type", "name", "description", "plugin", "widget", "options"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^plugin$",
          "default": "plugin"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "plugin": {
          "type": "string"
        },
        "widget": {
          "type": "string"
        },
        "widget_ref": {
          "type": "string"
        },
        "visible": {
          "type": "boolean",
          "default": true
        },
        "editable": {
          "type": "boolean",
          "default": true
        },
        "disabled": {
          "type": "boolean",
          "default": false
        },
        "options": {
          "type": "object",
          "default": {}
        },
        "_results": {
          "type": "array",
          "default": [],
          "items": {}
        }
      }
    },
    "Component": {
      "title": "Component",
      "type": "object",
      "required": [
        "name",
        "stages",
        "type"
      ],
      "order":["type", "name", "stages"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "pattern": "^component$",
          "default": "component"
        },
        "stages": {
          "type": "array",
          "maxItems": 3,
          "uniqueItems": true,
          "items": {
            "$ref": "#/tool_configs/Stage"
            }
          }
        }
      }
  },
  "required": [
    "name",
    "package",
    "host",
    "contexts",
    "components",
    "finalizers",
    "type",
    "_config"
  ],
  "order":[
    "type", "name", "package", "host", "contexts", "components", "finalizers"
  ],
  "properties": {
    "type": {
      "type": "string",
      "pattern": "^publisher$",
      "default": "publisher"
    },
    "name": {
      "type": "string",
      "default": null
    },
    "package": {
      "type": "string",
      "default": null
    },
    "host": {
      "type": "string",
      "default": null
    },
    "ui": {
      "type": "string",
      "default": null
    },
    "contexts": {
      "$ref": "#/tool_configs/Stage"
    },
    "components": {
      "type": "array",
      "items": {
        "$ref": "#/tool_configs/Component"
      },
      "default": [],
      "minItems": 1,
      "uniqueItems": true
    },
    "finalizers": {
      "$ref": "#/tool_configs/Stage"
    },
    "_config": {
      "$ref": "#/tool_configs/Config",
      "default": {}
    }
  }
}

