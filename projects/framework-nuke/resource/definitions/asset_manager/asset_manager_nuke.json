{
    "type": "asset_manager",
    "name": "default",
    "host_type": "nuke",
    "ui_type": "qt",
    "actions":{
        "discover":[
            {
                "label": "Refresh",
                "name": "discover",
                "plugin": "nuke_discover_am_action"
            }
        ],
        "update":[
            {
                "label": "Update to latest",
                "name": "update_to_latest",
                "plugin": "common_update_latest_am_action",
                "options": {"clear_selection":  false}
            }
        ]
    },
    "resolvers":{
        "resolve_dependencies":[
            {
                "name": "Resolve Maya context asset dependencies",
                "plugin": "common_default_am_resolver",
                "options": {
                    "task_types":{
                        "*": {
                            "asset_types": [
                                {
                                    "asset_type": "img",
                                    "filters": {
                                        "task_names_include": [".*"],
                                        "task_names_exclude": [".^"],
                                        "asset_names_include": [".*"],
                                        "asset_names_exclude": [".^"]
                                    }
                                },
                                {
                                    "asset_type": "render",
                                    "filters": {
                                        "task_names_include": [".*"],
                                        "task_names_exclude": [".^"],
                                        "asset_names_include": [".*"],
                                        "asset_names_exclude": [".^"]
                                    }
                                }
                            ]
                        }
                    },
                    "status_names_include": [".*"],
                    "status_names_exclude": ["(?i)(\\W|^)(Omitted)(\\W|$)"],
                    "linked_only": true,
                    "max_link_depth": 1
                }
            }
        ]
    }
}