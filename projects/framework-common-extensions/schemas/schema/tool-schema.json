{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://www.ftrack.com/integrations/framework/simple-tool-schema.json",
  "title": "ToolSchema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "tool_title",
    "host_type",
    "tool_type",
    "engine_type",
    "engine_name",
    "validation_schema"
  ],
  "properties": {
    "validation_schema": {
      "type": "string"
    },
    "tool_type": {
      "type": "string"
    },
    "tool_title": {
      "type": "string",
      "default": null
    },
    "host_type": {
      "type": "string",
      "default": "python"
    },
    "ui_type": {
      "type": "string",
      "default": ""
    },
    "discoverable": {
      "type": "array",
      "items": {"type": "string"},
      "default": [
        "Task"
      ]
    },
    "steps": {
            "type": "array",
            "items": {"$ref": "memory:StepSchema"},
            "minItems": 1,
            "uniqueItems": true
        },
    "plugins": {
            "type": "array",
            "items": {"$ref": "memory:PluginSchema"},
            "minItems": 1,
            "uniqueItems": true
        },
    "engine_type": {
          "type": "string"
        },
    "engine_name": {
          "type": "string"
        }
  }
}

