<?xml version='1.0' encoding='UTF-8'?>
<ExtensionManifest ExtensionBundleId="com.ftrack.framework.premiere.panel" ExtensionBundleVersion="${VERSION}" Version="7.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ExtensionList>
    <Extension Id="com.ftrack.framework.premiere.panel" Version="${VERSION}" />
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
        <Host Name="PPRO" Version="9.0"/>
        <Host Name="PRLD" Version="4.0"/>
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="7.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  <DispatchInfoList>
    <Extension Id="com.ftrack.framework.premiere.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./index.html</MainPath>
          <CEFCommandLine />
        </Resources>
        <Lifecycle>
		  <AutoVisible>true</AutoVisible>
          <StartOn>
            <!-- Premiere dispatches this event on startup -->
            <Event>com.adobe.csxs.events.ApplicationInitialized</Event>
          </StartOn>
		</Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>ftrack</Menu>
          <Geometry>
            <Size>
              <Width>300</Width>
              <Height>250</Height>
            </Size>
            <MaxSize>
              <Width>400</Width>
              <Height>300</Height>
            </MaxSize>
          </Geometry>
          <Icons>
            <Icon Type="Normal">./image/ftrack-logo-48.png</Icon>
          </Icons>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
