{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://www.ftrack.com/integrations/framework/stage-schema.json",
  "title": "StageSchema",
  "description": "Base stage schema for the framework",
  "type": "object",
  "required": [
        "stage_name",
        "category",
        "plugins",
        "stage_type"
      ],
  "properties": {
        "category": {
          "type": "string",
          "pattern": "^stage$",
          "default": "stage"
        },
        "stage_type": {
          "type": "string"
        },
        "stage_name": {
          "type": "string"
        },
        "optional": {
          "type": "boolean",
          "default": false
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "visible": {
          "type": "boolean",
          "default": true
        },
        "plugins": {
          "type": "array",
          "uniqueItems": true,
          "items": {"$ref": "memory:PluginSchema"}
        }
  },
  "additionalProperties": false
}