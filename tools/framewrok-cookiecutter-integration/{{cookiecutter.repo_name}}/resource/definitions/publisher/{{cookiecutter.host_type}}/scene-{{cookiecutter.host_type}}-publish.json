{
  "type": "publisher",
  "name": "Scene Publisher",
  "asset_type": "scene",
  "host_type": "{{cookiecutter.host_type}}",
  "ui_type": "qt",
  "contexts": [
    {
      "name": "main",
      "stages": [
        {
          "name": "context",
          "plugins":[
            {
              "name": "context selector",
              "plugin": "common_passthrough_publisher_context",
              "widget": "common_default_publisher_context"
            }
          ]
        }
      ]
    }
  ],
  "components": [
    {
      "name": "snapshot",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "collect_scene_selection",
              "plugin": "{{cookiecutter.host_type}}_scene_publisher_collector",
              "options": {
                "export": ["scene"]
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate scene",
              "plugin": "common_non_empty_publisher_validator"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "{{cookiecutter.host_type}}",
              "plugin": "{{cookiecutter.host_type}}_native_publisher_exporter",
              "widget": "{{cookiecutter.host_type}}_native_publisher_exporter"
            }
          ]
        }
      ]
    },
    {
      "name": "thumbnail",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "select camera to playblast",
              "plugin": "{{cookiecutter.host_type}}_camera_publisher_collector",
              "options": {
                "camera_name": "persp"
              },
              "widget": "{{cookiecutter.host_type}}_camera_publisher_collector"
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "common_non_empty_publisher_validator"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "write thumbnail",
              "plugin": "{{cookiecutter.host_type}}_thumbnail_publisher_exporter"
            }
          ]
        }
      ]
    },
    {
      "name": "reviewable",
      "stages": [
        {
          "name": "collector",
          "plugins":[
            {
              "name": "select camera to playblast",
              "plugin": "{{cookiecutter.host_type}}_camera_publisher_collector",
              "options": {
                "camera_name": "persp"
              }
            }
          ]
        },
        {
          "name": "validator",
          "plugins":[
            {
              "name": "validate selection",
              "plugin": "common_non_empty_publisher_validator"
            }
          ]
        },
        {
          "name": "exporter",
          "plugins":[
            {
              "name": "write reviewable",
              "plugin": "{{cookiecutter.host_type}}_reviewable_publisher_exporter"
            }
          ]
        }
      ]
    }
  ],
  "finalizers": [
    {
      "name": "main",
      "stages": [
        {
          "name": "pre_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "Pre publish to ftrack server",
              "plugin": "common_passthrough_publisher_pre_finalizer"
            }
          ]
        },
        {
          "name": "finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "Publish to ftrack server",
              "plugin": "common_passthrough_publisher_finalizer"
            }
          ]
        },
        {
          "name": "post_finalizer",
          "visible": false,
          "plugins":[
            {
              "name": "Post process publish",
              "plugin": "common_passthrough_publisher_post_finalizer"
            }
          ]
        }
      ]
    }
  ]
}